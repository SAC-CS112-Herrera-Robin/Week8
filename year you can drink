import java.util.Scanner;
public class Lab1 {

	private static Scanner input;
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		input = new Scanner(System.in);
		
		String name;
		int year;
		int age;
		int limit=21;
		int drink;
		
		System.out.println("Please enter your first name");
		name = input.nextLine() ;
		
		System.out.println("Please enter year born");
		year= input.nextInt();
		
		age = (2015-year);
		drink= (year+21);
		
		System.out.printf("Hi %s, you are %d years old today\n", name,age);
	
		if (age<limit){
			System.out.printf("You are not old enought to drink!\nYou can drink when the year is %d", drink);
		}
	
		if (age>limit){
			System.out.println("You can drink all you want MAN/WOMAN!!!");
		}
		}
	
	}
